@{
    ViewData["Title"] = "Employee Management System";
}

<!-- Features Overview -->
<section class="features-section py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="section-title mb-3">Everything You Need in One Platform</h2>
            <p class="section-subtitle text-muted">
                Comprehensive tools for modern HR management
            </p>
        </div>

        <div class="row g-4">
            <div class="col-md-3">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-user-tie fa-3x text-primary"></i>
                    </div>
                    <h4 class="feature-title mb-3">Employee Database</h4>
                    <p class="feature-description">
                        Centralized employee profiles with complete HR records, documents, and history.
                    </p>
                    <a href="/Home/Features#database" class="btn btn-link">Learn More →</a>
                </div>
            </div>

            <div class="col-md-3">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-calendar-alt fa-3x text-success"></i>
                    </div>
                    <h4 class="feature-title mb-3">Attendance & Leave</h4>
                    <p class="feature-description">
                        Automated time tracking, leave management, and attendance reporting.
                    </p>
                    <a href="/Home/Features#attendance" class="btn btn-link">Learn More →</a>
                </div>
            </div>

            <div class="col-md-3">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-chart-line fa-3x text-warning"></i>
                    </div>
                    <h4 class="feature-title mb-3">Performance</h4>
                    <p class="feature-description">
                        360-degree feedback, goal tracking, and performance appraisal cycles.
                    </p>
                    <a href="/Home/Features#performance" class="btn btn-link">Learn More →</a>
                </div>
            </div>

            <div class="col-md-3">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-file-invoice-dollar fa-3x text-danger"></i>
                    </div>
                    <h4 class="feature-title mb-3">Payroll</h4>
                    <p class="feature-description">
                        Seamless payroll processing with tax calculations and compliance.
                    </p>
                    <a href="/Home/Features#payroll" class="btn btn-link">Learn More →</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- System Statistics -->
<section class="stats-section bg-light py-5">
    <div class="container py-5">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="stat-number display-4 fw-bold text-primary">98%</h3>
                    <p class="stat-label">User Satisfaction</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="stat-number display-4 fw-bold text-success">40%</h3>
                    <p class="stat-label">HR Process Efficiency</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="stat-number display-4 fw-bold text-warning">75%</h3>
                    <p class="stat-label">Paperwork Reduction</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="stat-number display-4 fw-bold text-info">24/7</h3>
                    <p class="stat-label">System Availability</p>
                </div>
            </div>
        </div>
    </div>
</section>







